<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="19dp"
    android:id="@+id/rootLayout"
    android:background="@drawable/back">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/etCiudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa el nombre de la ciudad"
        android:inputType="text"
        android:padding="15dp"
        android:background="@drawable/edittext_background"

        android:textColor="#0288D1"
        android:textSize="16sp" />

    <!-- Botón para consultar el clima -->
    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_marginLeft="12dp"
        android:padding="15dp"

        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0288D1"
        android:elevation="4dp" />
</LinearLayout>







    <ImageView
        android:id="@+id/ivIconoClima"
        android:layout_width="290dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Icono del clima" />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <!-- Clima actual -->
            <TextView
                android:id="@+id/textoTemperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busca"
                android:textColor="@color/white"
                android:textStyle="bold"

                android:textSize="70sp"
                />
            <TextView
                android:id="@+id/textoClima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="una ciudad"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#F7FAFB"

                 />

        </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/textoInfoClima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pronóstico para los próximos días:"
            android:textSize="19sp"
            android:textColor="#F8F9FA"
            android:visibility="gone" /> <!-- Inicialmente oculto -->

    </ScrollView>



</LinearLayout>